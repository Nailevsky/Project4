<h1>Log In</h1>

<%= form_with model: @user, url: session_path do |form| %>

    <div>
        <%= form.label :email %>
        <%= form.email_field :email %>
    </div>

    <div>
        <%= form.label :password %>
        <%= form.password_field :password %>
    </div>


    <div class="actions">
        <%= form.submit "Log In", class: "bg-gray-100 px4 py2 rounded hover:bg-gray-300"%>
    </div>
<% end %>

<%= link_to "Forgot your password?", new_password_reset_path %>