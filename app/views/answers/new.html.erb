<h1>Answer the Question</h1>
<p>Question: <%= @question.content %></p>

<%= form_with model: [@participation, @answer], local: true do |form| %>
  <div class="field">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
  <div class="actions">
    <%= form.submit "Submit Answer" %>
  </div>
<% end %>