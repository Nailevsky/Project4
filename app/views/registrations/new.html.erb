<div class="bg-grey-lighter min-h-screen flex flex-col">
  <div class="container max-w-sm mx-auto flex-1 flex flex-col items-center justify-center px-2">
    <div class="bg-white px-6 py-8 rounded shadow-md text-black w-full">
      <h1 class="mb-8 text-3xl text-center">Sign Up</h1>
      <%= form_with model: @user, url: registration_path, class: "w-full" do |form| %>
        <% if form.object.errors.any? %>
          <div class="bg-red-100 text-red-700 p-4 rounded mb-4">
            <% form.object.errors.full_messages.each do |message| %>
              <p><%= message %></p>
            <% end %>
          </div>
        <% end %>

        <%= form.text_field :username, class: "block border border-grey-light w-full p-3 rounded mb-4", placeholder: "Username" %>
        <%= form.email_field :email, class: "block border border-grey-light w-full p-3 rounded mb-4", placeholder: "Email" %>
        <%= form.password_field :password, class: "block border border-grey-light w-full p-3 rounded mb-4", placeholder: "Password" %>
        <%= form.password_field :password_confirmation, class: "block border border-grey-light w-full p-3 rounded mb-4", placeholder: "Confirm Password" %>

        <%= form.submit "Create Account", class: "w-full text-center py-3 rounded bg-green-500 text-white hover:bg-green-600 focus:outline-none my-1" %>
      <% end %>
    </div>

    <div class="mt-6">
        Already have an account?
        <a class="no-underline text-blue-600 hover:text-blue-400" href="<%= new_session_path %>">Log in
    </a>
    </div>
  </div>
</div>