<h1 class="text-3xl font-extrabold text-center mb-6 text-gray-800">
  Round <%= @round %>
</h1>

<% if @round > 1 %>
  <div class="flex justify-between max-w-xl mx-auto mb-6">
    <div class="bg-yellow-100 p-4 rounded-lg w-1/2 text-center mr-2">
      <p class="text-gray-600 ">
        Previous move '<%= @user_move.capitalize  %>' got <%= @previous_user_score %> points
      </p>
    </div>

    <div class="bg-yellow-100 p-4 rounded-lg w-1/2 text-center ml-2">
      <p class="text-gray-600 ">
      Previous move '<%= @player_move.capitalize %>' got <%= @previous_player_score %> points
      </p>
    </div>
  </div>
<% end %>

<div class="bg-white  p-6 rounded-lg shadow-lg max-w-xl mx-auto">
  <div class="flex justify-between mb-4">
    <div class="bg-gray-100 p-2 rounded-lg shadow-md w-1/2 text-center mr-2">
      <h3 class="text-xl font-semibold text-gray-800  mb-2">
        You - <%= @participation.user_score %> points
      </h3>
    </div>

    <div class="bg-gray-100 p-2 rounded-lg shadow-md w-1/2 text-center ml-2">
      <h3 class="text-xl font-semibold text-gray-800  mb-2">
        Opponent - <%= @participation.player_score %> points
      </h3>
    </div>
  </div>
</div>

<div class="flex justify-center mt-6">
  <%= form_with url: update_round_game_participation_path(@participation.game, @participation, round: @round), method: :post, class: "flex space-x-1" do %>
    <div>
      <button type="submit" name="move" value="cooperate" class="bg-green-500 text-white font-bold py-3 px-6 rounded-full transform transition hover:scale-105 hover:bg-green-600 w-32">
        Cooperate
      </button>
    </div>
    <div>
      <button type="submit" name="move" value="betray" class="bg-red-500 text-white font-bold py-3 px-6 rounded-full transform transition hover:scale-105 hover:bg-red-600 w-32">
        Betray
      </button>
    </div>
  <% end %>
</div>